// Firestore Security Rules
// Deploy with: firebase deploy --only firestore:rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default: deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Snapshots collection - read-only for everyone, write for service account
    match /snapshots/{snapshotId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Latest snapshot - public read
    match /snapshots/latest {
      allow read: if true;
    }
    
    // Theatres collection - public read
    match /theatres/{theatreId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Auth tokens - private
    match /auth_tokens/{tokenId} {
      allow read, write: if request.auth != null;
    }
    
    // Scraper runs - public read for dashboard
    match /scraper_runs/{runId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
