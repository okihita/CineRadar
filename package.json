{
  "name": "cineradar-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:admin\" \"npm run dev:web\"",
    "dev:admin": "pnpm run dev --filter=admin -- --port 3000",
    "dev:web": "pnpm run dev --filter=web -- --port 3001",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "setup": "pnpm install && uv sync",
    "scrape": "uv run python -m scraper"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
